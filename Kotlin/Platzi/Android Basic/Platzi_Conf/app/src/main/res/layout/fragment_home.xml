<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation"
                android:layout_margin="@dimen/marginCardView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/highImageViewHome"
                        android:src="@drawable/banner_platzi_conf">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginHomeSubtitle"
                        android:text="@string/inicio_frag_tv_que_es"
                        android:textColor="@color/colorPlatziPrimaryDark"
                        android:textSize="@dimen/sizeTitle"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_que_es_resp"
                        android:textStyle="normal"
                        android:textSize="@dimen/sizeSubTitle"
                        android:textColor="@color/colorPlatziPrimary"
                        android:layout_margin="@dimen/marginHomeSubtitle">
                    </TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="10dp"
                android:layout_margin="@dimen/marginCardView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/highImageViewHome"
                        android:src="@drawable/platzi_conf_2"
                        android:scaleType="centerCrop">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_por_que"
                        android:textStyle="bold"
                        android:textSize="@dimen/sizeTitle"
                        android:textColor="@color/colorPlatziPrimaryDark"
                        android:layout_margin="@dimen/marginHomeSubtitle">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_por_que_resp"
                        android:textStyle="normal"
                        android:textSize="@dimen/sizeSubTitle"
                        android:textColor="@color/colorPlatziPrimary"
                        android:layout_margin="@dimen/marginHomeSubtitle">
                    </TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="10dp"
                android:layout_margin="@dimen/marginCardView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/highImageViewHome"
                        android:src="@drawable/platzi_conf_3"
                        android:scaleType="centerCrop">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_info"
                        android:textStyle="bold"
                        android:textSize="@dimen/sizeTitle"
                        android:textColor="@color/colorPlatziPrimaryDark"
                        android:layout_margin="@dimen/marginHomeSubtitle">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_info_resp"
                        android:textStyle="normal"
                        android:textSize="@dimen/sizeSubTitle"
                        android:textColor="@color/colorPlatziPrimary"
                        android:layout_margin="@dimen/marginHomeSubtitle">
                    </TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>